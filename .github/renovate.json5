{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  // allow sync_lockfile workflow to run without blocking renovate
  "gitIgnoredAuthors": [
    "github-actions[bot]+sync-lockfile@users.noreply.github.com"
  ],
  "timezone": "Asia/Tokyo",
  // allow renovate to run during non-office hours on weekdays,
  // and at any time on weekends.
  // note that this is NOT the schedule of renovate task dispatching,
  //  but the time window of allowing renovate to create PRs,
  //  see https://docs.renovatebot.com/configuration-options/#schedule
  "schedule": ["* 20-23,0-8 * * 1-5", "* * * * 0,6"],
  "lockFileMaintenance": {
    "enabled": true
  },
  "enabledManagers": [
    "pep621"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "pep621"
      ],
      "rangeStrategy": "widen"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 16
}
